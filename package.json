{
  "name": "el-deportivo",
  "private": true,
  "workspaces": [
    "shell",
    "mfe-usuarios",
    "shared",
    "mfe-login"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev-shell\" \"npm:dev-usuarios\" \"npm:dev-login\"",
    "dev-shell": "npm --workspace=shell run dev",
    "dev-usuarios": "npm --workspace=mfe-usuarios run dev",
    "dev-login": "npm --workspace=mfe-login run dev",
    "install-all": "npm install --workspaces"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "autoprefixer": "^10.4.21",
    "concurrently": "^8.2.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17"
  },
  "dependencies": {
    "all": "^0.0.0",
    "axios": "^1.13.2",
    "path": "^0.12.7"
  }
}
